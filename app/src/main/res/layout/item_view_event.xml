<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_view_event_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="@dimen/small_margin"
    android:paddingEnd="@dimen/normal_margin"
    android:paddingTop="@dimen/tiny_margin"
    android:paddingBottom="@dimen/tiny_margin">

    <com.simplemobiletools.commons.views.MyTextView
        android:id="@+id/contact_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/contact_event_extras"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="@dimen/bigger_text_size" />

    <LinearLayout
        android:id="@+id/contact_event_extras"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/contact_view_item_height"
        android:layout_alignTop="@+id/contact_event"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/contact_event_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="@dimen/medium_margin"
            android:paddingEnd="@dimen/medium_margin"
            android:text="@string/birthday"
            android:textSize="@dimen/bigger_text_size" />

        <CheckBox
            android:id="@+id/contact_event_share_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="true"
            android:text=""
            android:visibility="visible" />

        <ImageView
            android:id="@+id/contact_event_share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-10dp"
            android:src="@android:drawable/ic_menu_share"
            android:contentDescription="@null"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>
