<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_edit_group_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="@dimen/activity_margin">

    <com.simplemobiletools.commons.views.MyTextView
        android:id="@+id/contact_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/contact_group_extras"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="@dimen/small_margin"
        android:paddingTop="@dimen/normal_margin"
        android:paddingEnd="@dimen/small_margin"
        android:paddingBottom="@dimen/normal_margin"
        android:text="@string/no_groups"
        android:textSize="@dimen/bigger_text_size" />

    <LinearLayout
        android:id="@+id/contact_group_extras"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/contact_group"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/contact_group_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_background"
            android:paddingTop="@dimen/remove_button_top_bottom_margin"
            android:paddingBottom="@dimen/remove_button_top_bottom_margin"
            android:paddingStart="@dimen/remove_button_left_right_margin"
            android:paddingEnd="@dimen/remove_button_left_right_margin"
            android:src="@drawable/ic_minus_vector"
            android:contentDescription="@null"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/contact_group_share_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="true"
            android:text=""
            android:visibility="visible" />

        <ImageView
            android:id="@+id/contact_group_share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-10dp"
            android:src="@android:drawable/ic_menu_share"
            android:contentDescription="@null"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>
