<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_edit_address_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="@dimen/activity_margin">

    <com.simplemobiletools.commons.views.MyEditText
        android:id="@+id/contact_address_topline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/contact_address_extras"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="@string/address"
        android:inputType="textCapWords|textMultiLine"
        android:minHeight="48dp"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/bigger_text_size" />

    <LinearLayout
        android:id="@+id/contact_address_extras"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/contact_address_topline"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/contact_refresh_display_address"
            android:layout_width="@dimen/contact_icons_size"
            android:layout_height="@dimen/contact_icons_size"
            android:layout_marginStart="2dp"
            android:contentDescription="@null"
            android:paddingTop="@dimen/medium_margin"
            android:paddingEnd="2dp"
            android:paddingBottom="@dimen/small_margin"
            android:src="@android:drawable/ic_popup_sync" />

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/contact_address_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical|end"
            android:hint="@string/home"
            android:minWidth="48dp"
            android:paddingStart="@dimen/medium_margin"
            android:paddingEnd="@dimen/medium_margin"
            android:textSize="@dimen/bigger_text_size" />

        <ImageView
            android:id="@+id/contact_address_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_background"
            android:paddingTop="@dimen/remove_button_top_bottom_margin"
            android:paddingBottom="@dimen/remove_button_top_bottom_margin"
            android:paddingStart="@dimen/remove_button_left_right_margin"
            android:paddingEnd="@dimen/remove_button_left_right_margin"
            android:src="@drawable/ic_minus_vector"
            android:contentDescription="@null"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/contact_address_share_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="true"
            android:text=""
            android:visibility="visible" />

        <ImageView
            android:id="@+id/contact_address_share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-10dp"
            android:src="@android:drawable/ic_menu_share"
            android:contentDescription="@null"
            android:visibility="visible" />
    </LinearLayout>

    <com.simplemobiletools.commons.views.MyEditText
        android:id="@+id/contact_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_address_topline"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="@string/address"
        android:inputType="textCapWords|textMultiLine"
        android:minHeight="48dp"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/bigger_text_size" />

    <com.simplemobiletools.commons.views.MyEditText
        android:id="@+id/contact_address_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_address"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="@string/address_street"
        android:inputType="textCapWords|textMultiLine"
        android:minHeight="48dp"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/bigger_text_size" />

    <com.simplemobiletools.commons.views.MyEditText
        android:id="@+id/contact_address_neighborhood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_address_street"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="@string/address_neighborhood"
        android:inputType="textCapWords|textMultiLine"
        android:minHeight="48dp"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/bigger_text_size" />

    <com.simplemobiletools.commons.views.MyEditText
        android:id="@+id/contact_address_postOfficeBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_address_neighborhood"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="@string/address_postOfficeBox"
        android:inputType="textCapWords|textMultiLine"
        android:minHeight="48dp"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/bigger_text_size" />

    <com.simplemobiletools.commons.views.MyEditText
        android:id="@+id/contact_address_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_address_postOfficeBox"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="@string/address_city"
        android:inputType="textCapWords|textMultiLine"
        android:minHeight="48dp"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/bigger_text_size" />

    <com.simplemobiletools.commons.views.MyEditText
        android:id="@+id/contact_address_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_address_city"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="@string/address_region"
        android:inputType="textCapWords|textMultiLine"
        android:minHeight="48dp"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/bigger_text_size" />

    <com.simplemobiletools.commons.views.MyEditText
        android:id="@+id/contact_address_postalCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_address_region"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="@string/address_postalCode"
        android:inputType="textCapWords|textMultiLine"
        android:minHeight="48dp"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/bigger_text_size" />

    <com.simplemobiletools.commons.views.MyEditText
        android:id="@+id/contact_address_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_address_postalCode"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="@string/address_country"
        android:inputType="textCapWords|textMultiLine"
        android:minHeight="48dp"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/bigger_text_size" />

</RelativeLayout>
